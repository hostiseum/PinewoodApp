@model PinewoodApp.CustomerDMS.Areas.Customer.Models.CustomerModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Customer";
}

<h1>@ViewData["Title"]</h1>

<h4>Add Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">@Html.LabelFor(m => m.FirstName)</label>
                <p>@Html.TextBoxFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })</p>
                @Html.ValidationMessageFor(m => m.FirstName,null, new {@class = "text-danger"} )
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">@Html.LabelFor(m => m.LastName)</label>
                <p>@Html.TextBoxFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })</p>
                @Html.ValidationMessageFor(m => m.LastName, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">@Html.LabelFor(m => m.Email)</label>
                <p>@Html.TextBoxFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })</p>
                @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label">@Html.LabelFor(m => m.Phone)</label>
                <p>@Html.TextBoxFor(m => m.Phone, new { htmlAttributes = new { @class = "form-control" } })</p>
                @Html.ValidationMessageFor(m => m.Phone, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label">@Html.LabelFor(m => m.City)</label>
                <p>@Html.TextBoxFor(m => m.City, new { htmlAttributes = new { @class = "form-control" } })</p>
                @Html.ValidationMessageFor(m => m.City, null, new { @class = "text-danger" })

            </div>
            <div class="form-group">
                <label asp-for="PostalCode" class="control-label">@Html.LabelFor(m => m.PostalCode)</label>
                <p>@Html.TextBoxFor(m => m.PostalCode, new { htmlAttributes = new { @class = "form-control" } })</p>
                @Html.ValidationMessageFor(m => m.PostalCode, null, new { @class = "text-danger" })

            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label">@Html.LabelFor(m => m.Country)</label>
                <p>@Html.TextBoxFor(m => m.Country, new { htmlAttributes = new { @class = "form-control" } })</p>
                @Html.ValidationMessageFor(m => m.Country, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
